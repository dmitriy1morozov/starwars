<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		card_view:cardCornerRadius="8dp"
		>

		<android.support.constraint.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_margin="16dp"
				>

				<TextView
						android:id="@+id/text_main_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@android:color/black"
						android:textSize="20sp"
						app:layout_constraintBottom_toTopOf="@+id/text_main_birth_year"
						app:layout_constraintLeft_toLeftOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						tools:text="Luke Skywalker"
						/>

				<TextView
						android:id="@+id/text_main_birth_year"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:textColor="@android:color/darker_gray"
						android:textSize="14sp"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintLeft_toLeftOf="@id/text_main_name"
						app:layout_constraintTop_toBottomOf="@id/text_main_name"
						tools:text="19BBY"
						/>

				<android.support.v7.widget.AppCompatImageView
						android:id="@+id/image_main_icon"
						android:layout_width="0dp"
						android:layout_height="0dp"
						android:src="@drawable/main_person_icon"
						app:layout_constraintBottom_toBottomOf="parent"
						app:layout_constraintDimensionRatio="1:1"
						app:layout_constraintRight_toRightOf="parent"
						app:layout_constraintTop_toTopOf="parent"
						/>
		</android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>